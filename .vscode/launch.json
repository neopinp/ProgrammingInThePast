{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "cppdbg",
      "request": "launch",
      "name": "GnuCOBOL: Compile and Run",
      "program": "${workspaceFolder}/cobol.exe",
      "cwd": "${workspaceFolder}",
      "externalConsole": true,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "text": "-file-exec-and-symbols ${workspaceFolder}/cobol.exe",
          "description": "Load symbols"
        }
      ],
      "preLaunchTask": "Compile COBOL"
    }
  ]
}
